---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import HomeCard from "../components/HomeCard.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="Contrata a marcel para obtener las mejores fotos y videos que quieras. 
    Fotografo y videomaker profesional. Especializado en capturar momentos unicos."
    />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <div
      class="flex-grow h-screen relative p- gap-2 bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
      id="mainSection"
    >
      <main class="max-w-screen-xl px-4 mx-auto">
        <slot />
      </main>
      <Footer />
    </div>
  </body>

  <style is:global>
    html {
      font-family: system-ui, sans-serif;
      background-size: 224px;
      color-scheme: dark light; /* we are applying dark mode to everything */
    }
    body {
      background: #050505;
      display: flex;
      flex-direction: column;
      justify-content: center;
      min-height: 100vh;
    }
  </style>

  <style>
    #mainSection {
      background-image: url("/MarceBackground.jpg"); /* Replace with the path to your image */
      background-size: cover; /* Cover the entire background */
      background-attachment: fixed; /* Scroll down parallax effect*/
      opacity: 0.9; /* Adjust transparency (0 to 1, where 0 is fully transparent) */
    }
  </style>
</html>
